@model List<WebBanSach.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
    decimal totalAmount = Model.Sum(item => item.Total);
}

<h2>Giỏ hàng của bạn</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Tên sách</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng cộng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@(item.ImageUrl ?? "/images/default-book.png")" alt="@item.Title" style="width: 50px; height: auto;" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Price.ToString("N0") đ</td>
                    <td>
                        @* Thêm nút Tăng/Giảm ở đây nếu muốn - hiện tại chỉ hiển thị số lượng *@
                        @item.Quantity
                    </td>
                    <td>@item.Total.ToString("N0") đ</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Cart" method="post">
                            <input type="hidden" name="id" value="@item.BookId" />
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-end"><strong>Tổng tiền:</strong></td>
                <td colspan="2"><strong>@totalAmount.ToString("N0") đ</strong></td>
            </tr>
        </tfoot>
    </table>

    <div class="text-end">
        <a asp-action="Checkout" asp-controller="Cart" class="btn btn-primary">Tiến hành Thanh toán</a>
    </div>
}
else
{
    <p class="text-center">Giỏ hàng của bạn đang trống.</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Quay lại trang chủ</a>
}