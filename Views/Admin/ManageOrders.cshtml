@model IEnumerable<WebBanSach.Models.Order>
@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="display-5">@ViewData["Title"]</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                &laquo; Quản lý Sách
            </a>
            <a asp-action="ManageUsers" class="btn btn-primary">
                Quản lý Người dùng &raquo;
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Tổng số đơn hàng: @Model.Count()</h5>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Tên Khách hàng</th>
                            <th>Email</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">Chưa có đơn hàng nào.</td>
                            </tr>
                        }
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.CustomerName</td>
                                <td>@order.Email</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@order.TotalAmount.ToString("N0") đ</td>
                                <td>
                                    <a asp-action="OrderDetail" asp-route-id="@order.Id" class="btn btn-info btn-sm">
                                        Xem (@order.OrderDetails.Count)
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>