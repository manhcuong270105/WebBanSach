@model WebBanSach.Models.Order
@{
    ViewData["Title"] = "Chi tiết Đơn hàng #" + Model.Id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="display-5">@ViewData["Title"]</h2>
        <a asp-action="ManageOrders" class="btn btn-secondary">
            &laquo; Quay lại Danh sách Đơn hàng
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5 class="mb-0">Thông tin Khách hàng</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Tên KH:</strong> @Model.CustomerName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Địa chỉ:</strong> @Model.Address</p>
                    <p><strong>Điện thoại:</strong> @Model.Phone</p>
                </div>
                <div class="col-12">
                    <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p class="text-danger"><strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("N0") đ</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Chi tiết Sản phẩm</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th style="width: 10%;">Ảnh bìa</th>
                        <th>Tên Sách</th>
                        <th>Số lượng</th>
                        <th>Đơn giá (tại lúc mua)</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.OrderDetails)
                    {
                        <tr>
                            <td>
                                <img src="@(string.IsNullOrEmpty(detail.Book?.ImageUrl) ? "~/images/books/book-placeholder.png" : detail.Book.ImageUrl)"
                                     class="img-fluid rounded" alt="Bìa sách" style="max-width: 60px;">
                            </td>
                            <td>@(detail.Book?.Title ?? "(Sách đã bị xóa)")</td>
                            <td>@detail.Quantity</td>
                            <td>@detail.Price.ToString("N0") đ</td>
                            <td>@((detail.Quantity * detail.Price).ToString("N0")) đ</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>