@model WebBanSach.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<!-- Style để ép nền tối cho trang này -->
<style>
    body {
        background-color: #2c1a1a;
    }
    /*
    header { display: none; }
    footer { display: none; }
    */
</style>

<div class="login-page-container">
    <div class="login-form-wrapper">
        <section>
            <!-- Form này sẽ post về Account/Register -->
            <form method="post" asp-controller="Account" asp-action="Register">
                <h2 class="login-title">Create An Account</h2>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Input cho Email (dùng làm Tên đăng nhập) -->
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control login-input" autocomplete="email" aria-required="true" placeholder="Email" />
                    <label asp-for="Email" class="form-label login-label">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Input cho Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control login-input" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Password" class="form-label login-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Input cho Confirm Password -->
                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" class="form-control login-input" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                    <label asp-for="ConfirmPassword" class="form-label login-label">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Nút Đăng ký -->
                <div>
                    <button id="register-submit" type="submit" class="w-100 btn btn-lg login-button">Create Account</button>
                </div>

                <!-- Link quay về Đăng nhập -->
                <div class="links-section">
                    <p>
                        <a asp-action="Login" class="forgot-link">Already have an account? Sign in</a>
                    </p>
                </div>
            </form>
        </section>

        <!-- Phần "Join" (Giữ nguyên cho giống) -->
        <div class="join-coffee-house-section">
            <p>Join WebBanSach to receive promotions, track orders, and get free shipping on your first order.</p>
            <!-- (Bạn có thể thay đổi text ở trên) -->
        </div>
    </div>
</div>

@section Scripts {
    <!-- Thêm script để xác thực (validate) form -->
    <partial name="_ValidationScriptsPartial" />
}
